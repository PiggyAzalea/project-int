pipeline {
    agent {
        docker {
            image 'exaclly/jenkins-agent:latest'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        JENKINS_IMG_NAME = "jenkins-agent:${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository containing Dockerfile.agent
                git url: 'https://github.com/PiggyAzalea/project-int.git', credentialsId: 'your-git-credentials-id'
            }
        }

        stage('Build Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USERNAME', passwordVariable: 'USERPASS')]) {
                    script {
                        // Build and push Jenkins agent image
                        sh '''
                            echo $USERPASS | docker login -u $USERNAME --password-stdin
                            docker build -t $JENKINS_IMG_NAME -f Dockerfile.agent .
                            docker tag $JENKINS_IMG_NAME exaclly/$JENKINS_IMG_NAME
                            docker push exaclly/$JENKINS_IMG_NAME
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                // Ensure cleanup steps run in the correct node context
                node {
                    // Clean up Docker images
                    sh '''
                        echo "Cleaning up Docker images"
                        docker rmi $JENKINS_IMG_NAME || echo "Image $JENKINS_IMG_NAME not found"
                        docker rmi exaclly/$JENKINS_IMG_NAME || echo "Image exaclly/$JENKINS_IMG_NAME not found"
                    '''
                }
                cleanWs()
            }
        }
    }
}
